extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-gray
                h1= obras.titulo
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Titulo
                        td= obras.titulo
                    tr
                        th Tipo
                        td= obras.tipo
                    tr
                        th Compositor
                        td= obras.compositor
                    if obras.arranjo
                        th Arranjo
                        td= obras.arranjo
                    if obras.instrumentos
                        tr
                            th Instrumentos
                            td
                                table
                                    tr
                                        th Nome
                                        th Voz
                                        th Partitura   
                                    tr
                                        td  
                                            ul.w3-ul
                                                each a in obras.instrumentos
                                                    li= a.nome 
                                        td
                                            ul.w3-ul
                                                each p in obras.instrumentos
                                                    if p.partitura.voz
                                                        li=p.partitura.voz
                                        td
                                            ul.w3-ul    
                                                each c in obras.instrumentos
                                                    li=c.partitura.path
                                                                                     
            footer.w3-container.w3-light-gray
